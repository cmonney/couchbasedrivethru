@model CouchbaseDriveThru.Models.Customer

@{
    ViewBag.Title = "Customer Detail Page";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control-static" } })               
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lastname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control-static" } })                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Postcode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Postcode, new { htmlAttributes = new { @class = "form-control-static" } })               
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control-static" } })               
            </div>
        </div>
    </div>
</div>